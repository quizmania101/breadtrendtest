            <script>
                function copyToClipboard(val) {
                  const t = document.createElement("textarea");
                  document.body.appendChild(t);
                  t.value = val;
                  t.select();
                  document.execCommand('copy');
                  document.body.removeChild(t);
                }
                function copy() {
                  copyToClipboard('elated-knuth-b773ed.netlify.app');
                  console.log('Copied!');
                }
                </script>

